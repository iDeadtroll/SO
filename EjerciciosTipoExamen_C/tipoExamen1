#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/types.h>
#include <sys/stat.h>
#include <fcntl.h>
#include <string.h>

void crearArchivo(){
    FILE *fp;
    fp = fopen("archivo.txt", "w");
    fclose(fp);
}

void archivoExiste(){
    FILE *file;
    if (file = fopen("archivo.txt", "r")) {
        fclose(file);
        printf("el archivo existe\n");
    } else {
        printf("el archivo no exite\n");
    }
}

void compararArchivos(){
    FILE *fp1, *fp2;
    int ch1, ch2;
    char fname1[40], fname2[40];

    printf("Ingrese el nombre del primer archivo :");
    scanf("%s",fname1);

    printf("Ingrese el nombre del segundo archivo:");
    scanf("%s",fname2);

    fp1 = fopen(fname1, "r");
    fp2 = fopen(fname2, "r");

    if (fp1 == NULL) {
        printf("No se puede abrir %s para leer\n", fname1);
        exit(1);
    } else if (fp2 == NULL) {
        printf("No se puede abrir %s para leer\n", fname2);
        exit(1);
    } else {
        ch1 = getc(fp1);
        ch2 = getc(fp2);

        while ((ch1 != EOF) && (ch2 != EOF) && (ch1 == ch2)) {
            ch1 = getc(fp1);
            ch2 = getc(fp2);
        }

        if (ch1 == ch2)
            printf("Los archivos son iguales\n");
        else if (ch1 != ch2)
            printf("Los archivos son diferentes\n");

        fclose(fp1);
        fclose(fp2);
    }
}

int main() {
    int opt;
    printf("Seleccione opcion:");
    scanf("%d",&opt);

    switch (opt){
        case 1:
            crearArchivo();
            printf("Archivo creado\n");
            break;
        case 2:
            archivoExiste();
            break;
        case 3:
            compararArchivos();
            break;
    }
    return 0;
}
    
